{
  "name": "FlowScript",
  "scopeName": "source.flowscript",
  "patterns": [
    { "include": "#comments" },
    { "include": "#strings" },
    { "include": "#numbers" },
    { "include": "#keywords" },
    { "include": "#functions" },
    { "include": "#operators" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.flowscript",
          "match": "//.*$"
        },
        {
          "name": "comment.block.flowscript",
          "begin": "/\\*",
          "end": "\\*/"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.flowscript",
          "begin": "\"",
          "end": "\"",
          "beginCaptures": { "0": { "name": "punctuation.definition.string.begin.flowscript" } },
          "endCaptures": { "0": { "name": "punctuation.definition.string.end.flowscript" } },
          "patterns": [
            { "name": "constant.character.escape.flowscript", "match": "\\\\." }
          ]
        },
        {
          "name": "string.quoted.single.flowscript",
          "begin": "'",
          "end": "'",
          "patterns": [
            { "name": "constant.character.escape.flowscript", "match": "\\\\." }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        { "name": "constant.numeric.integer.flowscript", "match": "\\b\\d+\\b" },
        { "name": "constant.numeric.float.flowscript", "match": "\\b\\d+\\.\\d+\\b" }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.flowscript",
          "match": "\\b(?:if|else|for|while|return|break|continue|func|let|const)\\b"
        }
      ]
    },
    "functions": {
      "patterns": [
        {
          "name": "entity.name.function.flowscript",
          "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\s*(?=\\()"
        }
      ]
    },
    "operators": {
      "patterns": [
        { "name": "keyword.operator.flowscript", "match": "\\+|\\-|\\*|\\/|==|!=|<=|>=|<|>|=|\\+=|-=|\\*=|\\/=|&&|\\|\\|" }
      ]
    }
  }
}
